= turbo_frame_tag dom_id(timer) do 
  .card.mb-3{ data: { controller: 'localtime', localtime_time_value: timer.starts_at.iso8601, localtime_duration_value: timer.duration } }
    .card-header 
      .row
        .col 
          %h5.card-title= timer.name
        .col-4.text-end
          .btn-group
            - unless timer.map_url.blank?
              = link_to timer.map_url, class: 'btn btn-success btn-sm', target: '_blank' do
                %i.bi.bi-globe

            - if policy(timer).edit?
              = link_to reset_timer_path(timer), class: 'btn btn-primary btn-sm', data: { turbo_method: :patch, turbo_confirm: 'Are you sure?', turbo_frame: dom_id(timer) }  do
                %i.bi.bi-arrow-clockwise

          .btn-group
            - if policy(timer).edit?
              = link_to edit_timer_path(timer), class: 'btn btn-primary btn-sm', data: { turbo_frame: dom_id(timer) }  do
                %i.bi.bi-pencil
            - if policy(timer).destroy?
              = link_to timer, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?', turbo_frame: '_top' }, class: 'btn btn-danger btn-sm' do
                %i.bi.bi-trash 
    .card-body
      %h1.text-center.time{ data: { localtime_target: 'elapsed' } }
        = distance_of_time_in_words timer.elapsed
      
      %p.card-text
        = timer.description
    .card-footer
      .row
        .col-8
          .card-text{ data: { localtime_target: 'output' } }
            = timer.starts_at
          .card-text
            %strong Duration:
            = distance_of_time_in_words(timer.duration)
          - unless timer.map_url.blank?
            .card-text
              %strong X:
              = timer.coord_x
              &nbsp;
              %strong Y:
              = timer.coord_y


        .col-4.text-end
          %p.card-text= timer.user

