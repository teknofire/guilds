.row 
  .col-md-4
    .card.mb-3
      %h4.card-header
        %b= @ashes_item.itemName
      .card-body
        %p
          %b Guid:
          = @ashes_item.guid
        %p
          %b Name: 
          = @ashes_item.itemName
        %p
          %b Description:
          .ms-4
            != @ashes_item.description

    .d-grid.gap-2
      = link_to 'Back', ashes_items_path, class: 'btn btn-secondary'

  .col-md-8
    .card
      %h4.card-header Raw Data:
      .card-body 
        - @ashes_item.data.each do |key, value|
          .row 
            .col-3.text-end
              %b= key
            .col-9
              != ap value, plain: true

